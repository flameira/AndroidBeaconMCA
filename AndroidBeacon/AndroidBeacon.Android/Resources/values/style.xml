<!--
Documentation:
https://blog.xamarin.com/android-tips-hello-toolbar-goodbye-action-bar/
https://developer.android.com/training/material/theme.html
https://blog.xamarin.com/android-tips-hello-material-design-v7-appcompat/

Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette
-->
<resources>
	<style name="AppTheme" parent="AppTheme.Base">
	</style>
	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="windowActionModeOverlay">true</item>
		<item name="android:windowBackground">@color/window_background_loading</item>
	    <!-- You can also set colorControlNormal, colorControlActivated, colorControlHighlight and colorSwitchThumbNormal. -->
	</style>
</resources>
